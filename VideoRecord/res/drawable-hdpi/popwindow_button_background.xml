<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#006047" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">
        <shape  android:shape="rectangle">
            <solid android:color="#009b72" />
            <corners android:radius="5dp" />
            <padding
                android:top="10dp"
                android:right="15dp"
                android:bottom="10dp"
                android:left="15dp"/>
        </shape>
    </item>
</layer-list>